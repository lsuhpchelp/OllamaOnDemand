Bootstrap: docker
From: ollama/ollama:0.11.10


################################################################################
%labels
################################################################################

Maintainer      Jason Li
Version         1.0.0
Description     Ollama OnDemand official Singularity recipe


################################################################################
%environment
################################################################################

export PATH=/opt/miniforge3/bin:$PATH

################################################################################
%post
################################################################################

# Install packages
apt update && \
    apt install -y wget git && \
    apt clean

# Install Miniforge (latest Python for latest Gradio version)
cd /opt
wget https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-Linux-x86_64.sh && \
    bash Miniforge3-Linux-x86_64.sh -b -p /opt/miniforge3/ && \
    rm Miniforge3-Linux-x86_64.sh && \
    /opt/miniforge3/bin/conda init bash && \
    . /opt/miniforge3/bin/activate

# Install Gradio
pip install gradio==5.45.0 ollama==0.5.3

# Clone Ollama OnDemand GitHub repo
cd /opt && git clone https://github.com/lsuhpchelp/OllamaOnDemand

################################################################################
%runscript
################################################################################

python -u /opt/OllamaOnDemand/main.py "$@"
